<p>
  <label for="title">Title</label>
  {{input value=model.title id="title" class="form-control"}}
</p>

<p>
  <label for="subtitle">Subtitle</label>
  {{input value=model.subtitle id="subtitle" class="form-control"}}
</p>

<p>
  <div class="row">
    <div class="col-md-7">
      <label for="content">content</label><br>
      {{textarea value=model.content id="content" rows=10 class="form-control"}}
    </div>

    <div class="col-md-5">
      <h4>Live Preview</h4>
      {{markdown-to-html markdown=model.content}}
    </div>
  </div>
</p>

<button {{action 'save' authManager}} id="save" class="btn btn-primary">Save</button>

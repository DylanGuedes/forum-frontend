<ol class="breadcrumb">
  <li>{{#link-to 'sections.index'}}Home{{/link-to}}</li>
  <li>{{model.get('firstElement').name}}</li>
</ol>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title(subtitle)</th>
      <th>Author</th>
      <th>Replies</th>
      <th>Last Post</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |topic|}}
      <tr>
        <td>
          {{#link-to 'section.topics.topic.index' topic.id}}{{topic.title}}{{/link-to}}
          {{#if topic.subtitle}}
            ({{topic.subtitle}})
          {{/if}}
        </td>
        <td>{{linkto-user user=topic.author}}</td>
        <td>{{topic.posts.length}}</td>
        <td>{{moment-format topic}} - {{linkto-user user=topic.author class="display-inline"}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{page-numbers content=model}}

